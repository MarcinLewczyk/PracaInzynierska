<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="lewczyk.pracainzynierska.UserExercise.UserExerciseMenuActivity">

    <Button
        android:id="@+id/userExerciseToDoButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/exercises_list_to_do"
        android:textSize="28sp"
        android:textColor="@color/colorPrimaryText"
        android:layout_marginBottom="20dp"
        android:background="@android:color/transparent"
        android:layout_above="@+id/userExercisePlanButton"/>

    <Button
        android:id="@+id/userExercisePlanButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/exercise_plans"
        android:textSize="28sp"
        android:textColor="@color/colorPrimaryText"
        android:layout_marginBottom="20dp"
        android:background="@android:color/transparent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <Button
        android:id="@+id/userExerciseListButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:textColor="@color/colorPrimaryText"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/userExercisePlanButton"
        android:background="@android:color/transparent"
        android:text="@string/exercises"/>

</RelativeLayout>