<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="lewczyk.pracainzynierska.UserExercise.UserExerciseParameters.UserExerciseParametersActivity">

    <TextView
        android:id="@+id/userExerciseNameTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryText"
        android:text="@string/exercise_name"/>

    <TextView
        android:id="@+id/userExerciseNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryText"
        android:layout_below="@id/userExerciseNameTitleTextView">
    </TextView>

    <TextView
        android:id="@+id/userExerciseSeriesTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/series"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryText"
        android:layout_below="@id/userExerciseNameTextView"/>

    <EditText
        android:id="@+id/userExerciseSeriesEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="@string/series"
        android:gravity="center_horizontal"
        android:textSize="17sp"
        android:textColor="@color/colorPrimaryText"
        android:textColorHint="@color/colorPrimaryText"
        android:layout_below="@+id/userExerciseSeriesTitleTextView">
    </EditText>

    <TextView
        android:id="@+id/userExerciseRepeatsTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/repeats_in_set"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryText"
        android:layout_below="@id/userExerciseSeriesEditText"/>

    <EditText
        android:id="@+id/userExerciseRepeatsEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="@string/repeats_in_set"
        android:gravity="center_horizontal"
        android:textSize="17sp"
        android:textColor="@color/colorPrimaryText"
        android:textColorHint="@color/colorPrimaryText"
        android:layout_below="@+id/userExerciseRepeatsTitleTextView">
    </EditText>

    <TextView
        android:id="@+id/userExerciseLoadTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/load"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryText"
        android:layout_below="@id/userExerciseRepeatsEditText"/>

    <EditText
        android:id="@+id/userExerciseLoadEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:gravity="center_horizontal"
        android:textSize="17sp"
        android:textColor="@color/colorPrimaryText"
        android:textColorHint="@color/colorPrimaryText"
        android:hint="@string/load"
        android:layout_below="@+id/userExerciseLoadTitleTextView"/>

    <Button
        android:id="@+id/userExerciseAddButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/execute_exercise"
        android:background="@android:color/transparent"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryText"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>