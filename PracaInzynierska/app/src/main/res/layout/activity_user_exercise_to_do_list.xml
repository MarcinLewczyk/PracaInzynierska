<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="lewczyk.pracainzynierska.UserExercise.UserExerciseToDoList.UserExerciseToDoListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userExerciseToDoListLinearLayout"
        android:weightSum="1">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:textSize="17sp"
            android:textColor="@color/colorPrimaryText"
            android:layout_marginLeft="15dp"
            android:text="@string/exercise_name"
            android:layout_weight="0.5" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="17sp"
            android:textColor="@color/colorPrimaryText"
            android:layout_marginLeft="15dp"
            android:text="@string/date"
            android:layout_weight="0.5" />
    </LinearLayout>

    <ListView
        android:id="@+id/userExerciseToDoListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userExerciseToDoListLinearLayout">
    </ListView>

</RelativeLayout>