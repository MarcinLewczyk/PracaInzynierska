<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="lewczyk.pracainzynierska.UserPersonalInfo.UserPersonalInfoMenuActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/centerPersonalInfoTextView"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/exercisePurposeListButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/exercise_purposes"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:padding="12dp"
        android:textSize="28sp"
        android:textColor="@color/colorPrimaryText"
        android:layout_marginBottom="20dp"
        android:layout_above="@id/centerPersonalInfoTextView"/>

    <Button
        android:id="@+id/bodyParametersListButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/body_parameters"
        android:background="@android:color/transparent"
        android:padding="12dp"
        android:textSize="28sp"
        android:textColor="@color/colorPrimaryText"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/centerPersonalInfoTextView"/>

</RelativeLayout>